<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutTokopedia">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_one"
            android:background="@drawable/frame_one_tokped"
            android:backgroundTint="@color/green"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <SearchView
            android:id="@+id/search_tokped"
            android:background="@drawable/searchview_tokped"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="208dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/search_text"
            android:text="@string/search_text_tokped"
            android:fontFamily="sans-serif"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/search_tokped"
            app:layout_constraintBottom_toBottomOf="@id/search_tokped"
            app:layout_constraintStart_toStartOf="@id/search_tokped"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>